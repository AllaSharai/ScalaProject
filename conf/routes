# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /createaccount              controllers.Application.showCreateUser()
POST    /createaccount              controllers.Application.createUser()
GET     /login                      controllers.Authentication.login()
POST    /login                      controllers.Authentication.authenticate()
GET     /logout                     controllers.Authentication.logout()
GET     /userproperties             controllers.EditUser.showUserProperties()
POST    /addInformation             controllers.EditUser.create()
GET     /edit/:id                   controllers.EditUser.edit(id: Long)
POST    /update/:id                 controllers.EditUser.update(id: Long)
POST    /delete/:id                 controllers.EditUser.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)